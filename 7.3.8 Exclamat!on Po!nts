def exclamations(text):
    # Convert string to list
    char_list = list(text)
    
    # Loop through the list and replace 'i' with '!'
    for i in range(len(char_list)):
        if char_list[i] == 'i':
            char_list[i] = '!'
    
    # Convert list back to string
    return ''.join(char_list)
